# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 71
[*.py]
max_line_length = 79

# Use 2 spaces for HTML files
[*.html]
indent_size = 2

# Use 2 spaces for YAML files
[*.yaml]
indent_size = 2

# JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = false

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
